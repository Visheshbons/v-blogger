<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>New Post | V-Blogger</title>
    <!-- Blocker styles moved to public/styles.css (use #blocked-overlay and .blocked-modal, .blocked-login-btn) -->
</head>
<body>
    <%- include('header') %>
    <main>
        <h2>Create a New Post</h2>
        <form action="/post" method="POST" enctype="multipart/form-data" id="postForm">
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div>
                <label for="content">Content:</label>
                <textarea id="content" name="content" rows="6" required></textarea>
            </div>
            <div> <!-- Images -->
                <label for="image">Image File:</label>
                <input type="file" id="imageFile" name="imageFile" accept="image/png,image/jpeg,image/gif">
                <div id="imagePreview" style="margin-top:8px;">
                    <img id="previewImg" src="" alt="" style="max-width:100%; max-height:300px; display:none; border-radius:8px;">
                </div>
            </div>
            <button type="submit" <%= blocked ? 'disabled' : '' %>>Publish</button>
        </form>

        <% if (blocked) { %>
        <div id="blocked-overlay" role="dialog" aria-modal="true" aria-labelledby="blocked-title">
            <div class="blocked-modal">
                <h3 id="blocked-title">Action Required</h3>
                <p>You have posted anonymously 2 times already.</p>
                <p>Please log in to continue.</p>
                <a href="/login" class="blocked-login-btn">Log in</a>
            </div>
        </div>
        <% } %>
    </main>
    <%- include('footer') %>

    <script>
        (function () {
            const fileInput = document.getElementById("imageFile");
            const previewImg = document.getElementById("previewImg");
            if (!fileInput || !previewImg) return;

            fileInput.addEventListener("change", function () {
                const file = this.files && this.files[0];
                if (!file || !file.type || !file.type.startsWith("image/")) {
                    previewImg.style.display = "none";
                    previewImg.src = "";
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (ev) {
                    previewImg.src = ev.target.result;
                    previewImg.style.display = "block";
                };
                reader.readAsDataURL(file);
            });
        })();
    </script>
</body>
</html>
